<script>
    $(document).ready(function () {
    $(document).on("input", '.meal_class', function () {
        var tariff_datas = <?php echo json_encode($tariff_datas); ?>;
        var id = $(this).attr('data-id');
        var parts = id.split("_"); // Splitting the string by "_"
        if(parts[0] == "CP"){
        var part = parts[1];  // Extracts 1
        var room_id = parts[2]; // Extracts 22
        var cpvalue = parseInt($('#'+id).val()) || 0;
        var dinnerValue = parseInt($('#dinner'+part).val()) || 0;
        var lunchValue = parseInt($('#lunch'+part).val()) || 0;

        var map_id = "MAP_"+part+"_"+room_id;
        var ap_id = "AP_"+part+"_"+room_id;
        var room_type_name = $('#rt'+room_id).val();
        if(part == 1){
            map_id = "MAP_"+part+"_"+room_id;
            ap_id = "AP_"+part+"_"+room_id;
            if(room_type_name == "Double"){
                $('#'+map_id).val((dinnerValue*2)+cpvalue);
                var vals = (dinnerValue+lunchValue)*2;
                $('#'+ap_id).val(vals+cpvalue);
            }
            else{
                $('#'+map_id).val(dinnerValue+cpvalue);
                $('#'+ap_id).val(dinnerValue+lunchValue+cpvalue);
            }
        }
        else{
            $.each(tariff_datas, function (index, data) {
                if (data.room_type_name === "Double") {
                    var room_ids = data.room_id;

                    // Check if the checkbox for this room is checked
                    if ($('.chk_room[value="' + room_ids + '"]').is(':checked')) {

                        var meal_ids = data.meal_tariff[3]['hotel_room_meal_id'];
                        var map_ids = "MAP_" + part + "_" + room_ids;
                        var ap_ids = "AP_" + part + "_" + room_ids;
                        var cp_ids = "CP_" + part + "_" + room_ids;

                        $('#' + map_ids).val(dinnerValue + cpvalue);
                        $('#' + ap_ids).val(dinnerValue + lunchValue + cpvalue);
                        $('#' + cp_ids).val(cpvalue);
                    }
                }
            });
        }
    }
    });
});
</script>
